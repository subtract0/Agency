#!/usr/bin/env bash
# DEPRECATED: agency_cli is now consolidated into agency.py
# This shim forwards all commands to `python agency.py`.
# Remove this file after one release cycle if no longer needed.

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PY="${PYTHON:-python}"

# Friendly notice with one-time hint (can be silenced by AGENCY_CLI_SILENCE_DEPRECATION=1)
if [[ "${AGENCY_CLI_SILENCE_DEPRECATION:-0}" != "1" ]]; then
  echo "[DEPRECATION] ./agency_cli is replaced by: $PY agency.py <command>" >&2
  echo "             Examples: run | dashboard | tail | logs | health | demo | test" >&2
fi

exec "$PY" "$SCRIPT_DIR/agency.py" "$@"
